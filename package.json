{
    "name": "blog-theme",
    "description": "Serendipity theme for my blog",
    "version": "2.0.12",
    "homepage": "https://yellowled",
    "author": {
        "name": "Matthias Mees",
        "url": "https://yellowled.de"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/yellowled/blog-theme.git"
    },
    "bugs": {
        "url": "https://github.com/yellowled/blog-theme/issues/"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "scripts": {
        "build": "npm-run-all --sequential prep:build copy:build css:build js:build svg:build",
        "copy:build": "npm-run-all --parallel copy:files copy:fonts copy:tpls",
        "copy:files": "copyfiles -u 1 src/*.jpg src/*.png src/img/xml.gif src/info.txt dist/${npm_package_name}",
        "copy:fonts": "copyfiles -u 1 src/fonts/* dist/${npm_package_name}",
        "copy:tpls": "copyfiles -u 1 src/*.tpl src/*.php src/UTF-8/*.php dist/${npm_package_name}",
        "css:build": "npm-run-all --sequential css:compile css:minify",
        "css:compile": "node-sass --output-style expanded --precision 5 src/style.scss src/style.css",
        "css:lint": "stylelint --syntax scss \"src/*.scss\" \"src/scss/**/*.scss\"",
        "css:minify": "postcss --config .postcssrc src/style.css --output dist/${npm_package_name}/style.css",
        "js:build": "npm-run-all --sequential js:lint js:prefix js:compile js:minify",
        "js:compile": "uglifyjs --comments \"/^!/\" --source-map \"url=master.js.map\" --output src/js/master.js -- node_modules/svg4everybody/dist/svg4everybody.js node_modules/fg-cookie/cookie.js node_modules/fontfaceobserver/fontfaceobserver.js node_modules/fr-offcanvas/dist/froffcanvas.min.js node_modules/prismjs/prism.js node_modules/prismjs/plugins/toolbar/prism-toolbar.js node_modules/prismjs/plugins/show-language/prism-show-language.js node_modules/prismjs/components/prism-markup-templating.js node_modules/prismjs/components/prism-php.js node_modules/prismjs/components/prism-scss.js node_modules/prismjs/components/prism-smarty.js src/js/bundle.js",
        "js:lint": "eslint src/js/**/*",
        "js:minify": "uglifyjs --compress --mangle --comments \"/^!/\" --source-map \"content=src/js/master.js.map,includeSources,url=master.js.map\" --output dist/${npm_package_name}/js/master.js -- src/js/master.js",
        "js:prefix": "babel src/js/main.js --out-file src/js/bundle.js",
        "prep:build": "del-cli dist/ && mkdirp dist/${npm_package_name} dist/${npm_package_name}/img dist/${npm_package_name}/js",
        "svg:build": "npm-run-all --sequential svg:compile svg:minify",
        "svg:compile": "svgstore -o src/img/sprite.svg src/icons/**/*.svg",
        "svg:minify": "svgo --config=.svgorc src/img/sprite.svg -o dist/${npm_package_name}/img/sprite.svg"
    },
    "dependencies": {
        "fg-cookie": "^1.0.0",
        "fontfaceobserver": "^2.1.0",
        "fr-offcanvas": "^1.1.1",
        "node-normalize-scss": "^8.0.1",
        "prismjs": "^1.17.1",
        "svg4everybody": "^2.1.9"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "autoprefixer": "^9.6.1",
        "copyfiles": "^2.1.1",
        "cssnano": "^4.1.10",
        "del-cli": "^2.0.0",
        "eslint": "^6.2.2",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^6.1.3",
        "postcss-flexbugs-fixes": "^4.1.0",
        "stylelint": "^10.1.0",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-recommended-scss": "^3.3.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-scss": "^3.9.4",
        "svgstore-cli": "^1.3.1",
        "svgo": "^1.3.0",
        "uglify-js": "^3.6.0"
    }
}
